
<section class="speaker-index interior-content clearfix" id="SpeakerIndex">
<h1 class="pagetitle">Speakers</h1>

<p><a href="/submit">Call for Speakers</a></p>

<% if @speakers.any? %>
  <ul>
    <% @speakers.each do |speaker| %>
    <li class="speaker">
        <%= link_to speaker_slug_path(speaker.slug, speaker) do %>
            <img class="img-circle" src="http://www.gravatar.com/avatar/<%= speaker.md5 %>?s=150" />
        <% end %>
        <%= link_to speaker.fullname, speaker_slug_path(speaker.slug, speaker) %>
    </li>
    <% end %>
  </ul>
<% end %>

</section>
