
<%= semantic_form_for @speaker_submission do |f| %>
  <%= f.inputs do %>
    <%= f.input :name %>
    <%= f.input :email, as: 'email' %>
    <%= f.input :title %>
    <%= f.input :abstract,       :input_html => { :class => 'autogrow', :rows => 20, :cols => 20, :maxlength => 5000  } %>
    <%= f.input :speaker_bio,       :input_html => { :class => 'autogrow', :rows => 3, :cols => 20, :maxlength => 300  } %>
  <% end %>
  <%= f.actions do %>
    <%= f.action :submit, :as => :button %>
  <% end %>
<% end %>
